<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:id="@+id/orientation_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Last averaged positions"
		android:textSize="9pt" android:padding="3dip" />

	<TextView android:id="@+id/orient_x_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		 android:text="X:" android:textSize="8pt"
		android:padding="3dip" />
	<TextView android:id="@+id/orient_x_value" android:gravity="right" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="8pt" android:padding="3dip" />

	<TextView android:id="@+id/orient_y_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content"  android:text="Y:" android:textSize="8pt"
		android:padding="3dip" />
	<TextView android:id="@+id/orient_y_value" android:gravity="right" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="8pt" android:padding="3dip" />

	<TextView android:id="@+id/orient_z_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Z:" android:textSize="8pt"
		android:padding="3dip" />
	<TextView android:id="@+id/orient_z_value" android:gravity="right" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="8pt" android:padding="3dip" />
		
		
	<TextView android:id="@+id/zoom_label" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="Scale:" android:textSize="8pt" android:padding="3dip" />	

	<TextView android:id="@+id/zoom_value" android:gravity="right" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="8pt" android:padding="3dip" />


	
	<ImageView android:id="@+id/imageView" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="matrix"
		android:src="@drawable/butterfly"
		></ImageView>
	
</LinearLayout>

